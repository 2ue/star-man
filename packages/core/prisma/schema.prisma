// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============ 核心表 ============

model StarredRepo {
  id              Int       @id
  nodeId          String    @map("node_id")
  name            String
  fullName        String    @unique @map("full_name")
  ownerLogin      String    @map("owner_login")
  ownerId         Int       @map("owner_id")
  ownerAvatarUrl  String?   @map("owner_avatar_url")
  description     String?
  htmlUrl         String    @map("html_url")
  cloneUrl        String    @map("clone_url")
  sshUrl          String    @map("ssh_url")
  language        String?
  stargazersCount Int       @default(0) @map("stargazers_count")
  forksCount      Int       @default(0) @map("forks_count")
  size            Int       @default(0)
  defaultBranch   String    @default("main") @map("default_branch")
  createdAt       DateTime  @map("created_at")
  updatedAt       DateTime  @map("updated_at")
  pushedAt        DateTime? @map("pushed_at")
  starredAt       DateTime  @map("starred_at")
  archived        Boolean   @default(false)
  disabled        Boolean   @default(false)
  private         Boolean   @default(false)
  fork            Boolean   @default(false)
  isStarred       Boolean   @default(true) @map("is_starred")
  category        String?
  syncAt          DateTime  @map("sync_at")

  // 关系
  tags   RepoTag[]
  topics RepoTopic[]

  @@map("starred_repos")
  @@index([ownerLogin])
  @@index([language])
  @@index([isStarred])
  @@index([category])
  @@index([syncAt])
  @@index([starredAt])
}

// ============ 标签系统 ============

model Tag {
  id    Int       @id @default(autoincrement())
  name  String    @unique
  repos RepoTag[]

  @@map("tags")
  @@index([name])
}

model RepoTag {
  repoId Int
  tagId  Int
  repo   StarredRepo @relation(fields: [repoId], references: [id], onDelete: Cascade)
  tag    Tag         @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([repoId, tagId])
  @@map("repo_tags")
  @@index([tagId])
  @@index([repoId])
}

// ============ Topics 系统 ============

model Topic {
  id    Int         @id @default(autoincrement())
  name  String      @unique
  repos RepoTopic[]

  @@map("topics")
  @@index([name])
}

model RepoTopic {
  repoId  Int
  topicId Int
  repo    StarredRepo @relation(fields: [repoId], references: [id], onDelete: Cascade)
  topic   Topic       @relation(fields: [topicId], references: [id], onDelete: Cascade)

  @@id([repoId, topicId])
  @@map("repo_topics")
  @@index([topicId])
  @@index([repoId])
}

// ============ 同步历史 ============

model SyncHistory {
  id           Int      @id @default(autoincrement())
  syncAt       DateTime @map("sync_at")
  added        Int      @default(0)
  updated      Int      @default(0)
  unstarred    Int      @default(0)
  total        Int      @default(0)
  errorMessage String?  @map("error_message")
  success      Boolean  @default(true)

  @@map("sync_history")
}
