{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@star-man/core": ["packages/core/src"],
      "@star-man/cli": ["packages/cli/src"],
      "@star-man/api": ["packages/api/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
